<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="3.0" author="Ravinder Reddy Kothabad">
        <sql>
            CREATE TYPE loan_application_status_enum AS ENUM ('PENDING', 'APPROVED', 'REJECTED', 'PROCESSED');
        </sql>
    </changeSet>

    <changeSet id="3.1" author="Ravinder Reddy Kothabad">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="loan_application_id_seq"/>
            </not>
        </preConditions>

        <createSequence sequenceName="loan_application_id_seq"
                        incrementBy="20"
                        startValue="1"
                        minValue="1"/>
    </changeSet>

    <changeSet id="3.2" author="Ravinder Reddy Kothabad">
        <createTable tableName="loan_applications">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="loan_applications_pk"/>
            </column>

            <column name="applicant_name" type="VARCHAR(100)"/>
            <column name="pan_no" type="VARCHAR(20)"/>
            <column name="email" type="VARCHAR(30)"/>
            <column name="loan_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="loan_amount" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="loan_application_status_enum">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>
<!--  link the sequence to id  -->
    <changeSet id="3.3" author="Ravinder Reddy Kothabad">
        <addDefaultValue
                columnName="id"
                tableName="loan_applications"
                defaultValueSequenceNext="loan_application_id_seq"/>
    </changeSet>
<!--  foreign key  -->
    <changeSet id="3.4" author="Ravinder Reddy Kothabad">
        <addForeignKeyConstraint
                baseTableName="loan_applications"
                baseColumnNames="loan_type_id"
                referencedTableName="loan_types"
                referencedColumnNames="id"
                constraintName="fk_loan_application_loan_type"
                validate="true"
        />
    </changeSet>

    <!-- Step 2: Add Index to the foreign key -->
    <changeSet id="3.5" author="Ravinder Reddy Kothabad">
        <createIndex
                tableName="loan_applications"
                indexName="idx_loan_type_id">
            <column name="loan_type_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>